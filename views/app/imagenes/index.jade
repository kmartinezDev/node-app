extends ../../layout.jade

block contenido 
    div(class="container")
        for imagen in imagenes
            .row
                h2=imagen.title
                a(href="/app/imagenes/edit/#{imagen._id}") Editar
                a(href="/app/imagenes/#{imagen._id}") Mostrar
                form(action="/app/imagenes/#{imagen._id}?_method=DELETE", method="POST")
                    input(type="submit", value="Eliminar")